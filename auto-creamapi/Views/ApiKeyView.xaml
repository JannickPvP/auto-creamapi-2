<views:MvxWindow x:Class="auto_creamapi.Views.ApiKeyView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
                 xmlns:viewModels="clr-namespace:auto_creamapi.ViewModels"
                 d:DataContext="{d:DesignInstance Type=viewModels:ApiKeyViewModel}"
                 mc:Ignorable="d"
                 Title="{Binding WindowTitle}" 
                 Width="550" Height="430" 
                 MinWidth="550" MinHeight="430"
                 MaxWidth="550" MaxHeight="430"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,15" FontSize="14">
            <Run FontWeight="Bold">Steam API Key Required</Run>
            <LineBreak />
            <LineBreak />
            <Run>Auto-CreamAPI requires a Steam Web API key to fetch the list of games and DLCs.</Run>
        </TextBlock>

        <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="0,0,0,15">
            <Run>To get your API key:</Run>
            <LineBreak />
            <Run>1. Click the button below to open the Steam API key page</Run>
            <LineBreak />
            <Run>2. Log in with your Steam account</Run>
            <LineBreak />
            <Run>3. Register a new API key (domain name doesn't matter, use any)</Run>
            <LineBreak />
            <Run>4. Copy the key and paste it below</Run>
        </TextBlock>

        <Button Grid.Row="2" 
                Content="Open Steam API Key Registration Page" 
                Command="{Binding OpenWebsiteCommand}"
                Margin="0,0,0,20"
                Padding="10,8"
                HorizontalAlignment="Stretch" />

        <TextBlock Grid.Row="3" 
                   Text="Paste your Steam API key here:"
                   Margin="0,0,0,5"
                   FontWeight="SemiBold" />

        <TextBox Grid.Row="4" 
                 Text="{Binding ApiKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,20"
                 Padding="8"
                 FontFamily="Consolas"
                 FontSize="13"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 AcceptsReturn="False"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Center"
                 ToolTip="Paste your Steam Web API key here" />

        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Save" 
                    Command="{Binding SaveCommand}"
                    IsDefault="True"
                    Width="80" 
                    Margin="0,0,10,0"
                    Padding="10,8" />
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    IsCancel="True"
                    Width="80"
                    Padding="10,8"
                    IsEnabled="{Binding CanCancel}" />
        </StackPanel>
    </Grid>
</views:MvxWindow>